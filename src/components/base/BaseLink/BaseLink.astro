---
import type { POLICIES, TARGETS, VARIATIONS } from "./types";

interface Props {
  class?: string;
  href: string;
  referrerpolicy?: POLICIES;
  target?: TARGETS;
  variation?: VARIATIONS;
}

let { class: classes, href, referrerpolicy, target, variation } = Astro.props;

const dynamicClasses = [
  "is-link",
  classes,
  variation ? `is-${variation}` : "is-link",
];
---

{
  href && variation && (
    <a
      class:list={dynamicClasses}
      href={href}
      referrerpolicy={referrerpolicy ?? "strict-origin-when-cross-origin"}
      rel="noopener"
      target={target ?? "_self"}
    >
      <slot />
    </a>
  )
}

<style>
  .is-link,
  .is-card {
    @apply flex 
    items-center
    justify-evenly
    gap-3
    font-mono
    text-black
    hover:text-white;
  }

  .is-topnav {
    @apply
    bg-gradient-to-r from-light-green to-main-green
    relative;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  .is-topnav::after {
    @apply
    content-['']
    absolute
    bg-gradient-to-r from-light-green to-main-green
    h-0
    w-0
    bottom-0;
    transition: 0.3s
  }
  .is-topnav:hover:after {
    @apply h-[1px] w-full
  }

  .is-action,
  .is-info,
  .is-error,
  .is-success,
  .is-inactive {
    @apply border-2
    border-solid
    px-1.5
    py-1.5
    font-mono
    text-base;
  }

  .is-action,
  .is-info,
  .is-error,
  .is-success,
  .is-inactive,
  .is-outside {
    @apply min-w-[140px] rounded-lg;
  }

  .is-action,
  .is-info,
  .is-error,
  .is-success,
  .is-inactive,
  .is-link {
    @apply text-black
    transition-all
    ease-in-out;
  }

  .is-action,
  .is-info,
  .is-error,
  .is-success {
    @apply hover:bg-blue-400
    hover:shadow-[4px_6px_4px_rgba(0,0,0,0.25)]
    active:shadow-none;
  }

  .is-action,
  .is-info {
    @apply hover:border-black;
  }

  .is-action {
    @apply
    border-main-green
    bg-gradient-to-r from-main-green to-light-green
    text-dark-blue

    hover:text-dark-blue
    hover:border-dark-blue;
  }
  
  .is-info {
    @apply border-black text-black;
  }

  .is-card {
    @apply border-b border-solid;
  }

  .is-error {
    @apply border-red-400 
    bg-red-950
    text-red-700;
  }

  .is-success {
    @apply border-green-400
    bg-green-950
    text-green-500;
  }

  .is-inactive {
    @apply cursor-not-allowed 
    border-gray-600
    bg-gray-700
    text-gray-800;
  }
  .is-outside {
    @apply cursor-pointer
    border-none
    bg-slate-400 
    px-2 
    py-3
    font-mono
    text-gray-600
    hover:border-slate-500
    hover:bg-slate-500
    hover:text-gray-600;
  }

  @media (min-width: 480px) {
    .is-action,
    .is-info,
    .is-error,
    .is-success,
    .is-inactive,
    .is-outside {
      @apply min-w-[172px] px-5;
    }
  }
</style>